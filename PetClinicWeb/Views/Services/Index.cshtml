@using PetClinicWeb.System.Extensions

@{
    ViewBag.Title = this.LocalResources("Title");
}

<h1>@ViewBag.Title</h1>

<div id="services-grid"></div>

<script>

    $(function () {

        jsGrid.locale("ru");

        $("#services-grid").jsGrid({
            width: "100%",
            pageSize: 15,
            filtering: true,
            selecting: true,
            editing: true,
            inserting: true,
            sorting: true,
            paging: true,
            autoload: true,
            deleteConfirm: function(item) {
                return "@this.LocalResources("DialogDeleteConfirm") \"" + item.TypeOfServiceAndPr + "\"?";
            },
            controller: {
                loadData: function (filter) {
                    var d = $.Deferred();
                    $.post("/Services/List", filter).done(function (response) {
                        d.resolve(response);
                    });

                    return d.promise();
                },
                insertItem: function (item) {
                    var d = $.Deferred();
                    var xhr$ = $.ajax({
                        type: "POST",
                        url: "/Services/Save",
                        data: item
                    });
                    xhr$.success(function (response) {
                        if (response.success) {
                            d.resolve(item);
                        } else {
                            $.toaster({ priority: 'danger', title: '@this.LocalResources("Error")', message: response.message, timeout: 4000 });
                            d.reject();
                        }
                    });
                    xhr$.fail(function (error) {
                        $.toaster({ priority: 'danger', title: '@this.LocalResources("Error")', message: error.statusText, timeout: 4000 });
                        d.reject();
                    });
                    return d;
                },
                updateItem: function (item) {
                    var d = $.Deferred();
                    var xhr$ = $.ajax({
                        type: "POST",
                        url: "/Services/Edit",
                        data: item
                    });
                    xhr$.success(function (response) {
                        if (response.success) {
                            d.resolve(item);
                        } else {
                            $.toaster({ priority: 'danger', title: '@this.LocalResources("Error")', message: response.message, timeout: 4000 });
                            d.reject();
                        }
                    });
                    xhr$.fail(function (error) {
                        $.toaster({ priority: 'danger', title: '@this.LocalResources("Error")', message: error.statusText, timeout: 4000 });
                        d.reject();
                    });
                    return d;
                },
                deleteItem: function (item) {
                    var d = $.Deferred();
                    var xhr$ = $.ajax({
                        type: "POST",
                        url: "/Services/Delete",
                        data: item
                    });
                    xhr$.success(function () {
                        d.resolve(item);
                    });
                    xhr$.fail(function (error) {
                        $.toaster({ priority: 'danger', title: '@this.LocalResources("Error")', message: error.statusText, timeout: 4000 });
                        d.reject();
                    });
                    return d;
                }
            },
            fields: [
                {
                    align: "left",
                    name: "TypeOfServiceAndPr",
                    title: "@this.LocalResources("ColumnTypeOfServiceAndPr")",
                    type: "text",
                    validate: "required"
                },
                {
                    align: "left",
                    name: "Amount",
                    title: "@this.LocalResources("ColumnAmount")",
                    type: "text",
                    validate: "required"
                },
                {
                    align: "left",
                    name: "Cost",
                    title: "@this.LocalResources("ColumnCost")",
                    type: "number",
                    validate: "required"
                },
                { type: "control" }
            ]
        });
    })

</script>

